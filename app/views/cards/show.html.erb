<div class="container">

  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1><%= @card.name %></h1> 
               <p class="pull-right"> <%= link_to 'Edit', edit_card_path(@card) %> </p>

      </div>

    </div>
    <div class="col-md-6">
     <img src="<%= @card.photo %>" class="img-responsive img-thumbnail"/>
   </div>
   <div class="col-md-6">
    <p class="lead">  <%= @card.short_desc %></p>

    <p>
      <%= @card.category %>
      <%= @card.long_desc %>
    </p>


    <p>
      <strong>Readiness:</strong>
      <%= @card.readiness %>
    </p>
     <p>
      <strong>Tags:</strong>
      <%= @card.tag_list %>
    </p>
       <hr>

      <p>Useful Links</p>

      <ul class="list-unstyled">
        <% @links.each do |link| %>
        <li><%= link.link_type %> - <a href="<%= link.url %>" target="_blank"><%= link.name %></a></li>
        <% end %>
      </ul>

      <div class="row">
  <div class="col-md-12">
    <%= form_for [@card, @link] do |f| %>
    <span class="form-inline">
      <%= f.text_field :name, :class => "form-control", placeholder: "Name" %>
      <%= f.text_field :url, :class => "form-control",  placeholder: "URL" %>
      <%= f.select :link_type, "<option>1. Further reading</option><option>2. Example</option><option>3. People</option><option>4. Photograph</option>".html_safe  %>
      <%= f.submit "Add Link", :class => "btn btn-default" %>
    </span>
    <% end %>
  </div>
</div>

      <hr>
      <div id="disqus_thread"></div>

    </div>
  </div>
</div>


<script type="text/javascript">
  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'futurekit'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
